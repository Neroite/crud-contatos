@model List<ContatoModel>
@{
	ViewData["Title"] = "Contatos";
}

<br>
<div class="d-grid col-3">
	<a class="btn btn-outline-success" type="button" asp-controller="Contato" asp-action="Adicionar">Adicionar</a>
</div>

<br>
@if (TempData["MensagemSucesso"] != null)
{
	<div class="alert alert-success text-center" role="alert">
		@TempData["MensagemSucesso"]
		<button type="button" class="btn-close" aria-label="Close"></button>
	</div>
}

@if (TempData["MensagemErro"] != null)
{
	<div class="alert alert-success text-center" role="alert">
		@TempData["MensagemErro"]
		<button type="button" class="btn-close" aria-label="Close"></button>
	</div>
}

<br>
<div class="text-center">
	<h1 class="text-center">
		Listagem de contatos
	</h1>
	
	<br>
	<br>
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nome</th>
					<th scope="col">Email</th>
					<th scope="col">Celular</th>
					<th scope="col"></th>
				</tr>
			</thead>
		@if (Model != null && Model.Any())
		{
			@foreach (ContatoModel contato in Model)
			{
				<tbody>
					<tr>
						<th scope="row">@contato.Id</th>
						<td>@contato.Nome</td>
						<td>@contato.Email</td>
						<td>@contato.Celular</td>
						<td>
							<div class="btn-group" role="group" aria-label="Basic example">
								<a type="button" class="btn btn-outline-primary" asp-controller="Contato" asp-action="Editar" asp-route-id="@contato.Id">Editar</a>
								<a type="button" class="btn btn-outline-danger" asp-controller="Contato" asp-action="ConfirmarApagar" asp-route-id="@contato.Id">Apagar</a>
							</div>
						</td>
					</tr>
				</tbody>
			}
		}
	</table>
</div>
